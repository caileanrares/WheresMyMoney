@model IEnumerable<WheresMyMoney.ViewModels.UserMovementsNamesViewModel>

@{
    ViewBag.Title = "Your Movements";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>These are your Movements</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-danger btn-lg" })
    @Html.ActionLink("View All", "Index", new { movementType = ViewBag.All }, new { @class = "btn btn-primary btn-lg" })
    @Html.ActionLink("View only Expenses", "Index", new { movementType = ViewBag.Expense }, new { @class = "btn btn-primary btn-lg" })
    @Html.ActionLink("View only Incomes", "Index", new { movementType = ViewBag.Income }, new { @class = "btn btn-primary btn-lg" })
</p>

@using (Html.BeginForm())
{
    <p>
        Find by Category or Notes: @Html.TextBox("searchString")
        <input type="submit" value="Search" class="btn btn-primary" />

    </p>
}




@using (Html.BeginForm())
{
<p>
    Find by date interval: 
    @Html.TextBox("StartDate", "Start Date", new { @class = "datepicker" })

    @Html.TextBox("EndDate", "End Date", new { @class = "datepicker" })
    <input type="submit" value="Search" class="btn btn-primary" />
</p>
}




<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Date", "Index", new { sortOrder = ViewBag.DateSortParam })

        </th>
        <th>
            @Html.DisplayNameFor(model => model.MovementType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th>
            @Html.ActionLink("Value", "Index", new { sortOrder = ViewBag.ValuesSortParam })
        </th>
        <th></th>
    </tr>

    @{float total = 0;}
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovementType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VALUE)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MovementId }) |
                @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                @Html.ActionLink("Delete", "Delete", new { id = item.MovementId })
            </td>
        </tr>


        total = total + item.VALUE;
    }
    <tr>
        <td><p class="BoldTotal">TOTAL</p></td>
        <td></td>
        <td></td>
        <td></td>
        <td>
            <p class="BoldTotal">@total</p>
        </td>
        <td></td>
    </tr>

</table>


<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />


@section scripts {

    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>

    <script>
        $(function () {
            $(".datepicker").datepicker({
                changeMonth: true,
                changeYear: true,
                yearRange: "-2:+5",
                /*showOn: "both",*/
                /*buttonText: "Select"*/
            });
        })
    </script>
}